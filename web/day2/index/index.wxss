}
.zhibo{
  width: 700rpx;
  border-radius: 5px;
  margin: 40rpx auto;
  display: block;
}
.tip{
  width: 700rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
}
.tip .line{
  height: 1px;
  background: #ccc;
  flex: 1;
}
.tip image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}
.tip .text{
  font-size: 12px;
  margin-right: 10rpx;
}
.miaoshaGoods{
  display: flex;
