/**index.wxss**/
.age{
  height: 100vh;
  background: #f0f0f0;
}
.navigationBar{
  height: 100rpx;
  width: 100vw;
  background: #fff;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top:0px;
  z-index: 100;
}
.navigationBar view{
  font-weight: 900;
  padding: 0 15rpx;
}
.navigationBar input{
  width: 300rpx;
  height: 80rpx;
  padding: 0 5px;
  background: rgb(236, 234, 237);
  border-radius: 5px;
  padding-left: 20rpx;
}
swiper{
  width: 100vw;
  margin-top: 120rpx;
}
swiper image{
  width: 100vw;
}
.classFy{
  width: 700rpx;
  background: #fff;
  margin: 20rpx auto;
  box-shadow: 0 0 10px 5px #cec9c9;
  border-radius: 5px ;
  display: flex;
  flex-wrap: wrap;
}
.classFy view{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  font-size: 11px;
  align-items: center;
}
.classFy view image{
  width: 80rpx;
  height: 80rpx;
}
.containers{
  background: #fff;
  width: 100vw;
  padding: 20rpx 0;
}
.box2{
  background: #fff;
