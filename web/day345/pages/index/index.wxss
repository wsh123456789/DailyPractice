  display: flex;
  margin: 10px 10px;
}

.kanjia image{
  width: 300rpx;
}

.kanjia .text{
  display: flex;
  flex-direction: column;
  font-size: 12px;
  justify-content: center;
}

.kanjia .text .jieshao{
  color: #ccc;
}

