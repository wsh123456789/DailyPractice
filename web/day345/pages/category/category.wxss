/* pages/category/category.wxss */
page{
  height: 100vh;
  width: 700rpx;
  margin: 0 auto;
  /*background: #f0f0f0;*/
  background: #fff;
}

.searchBox{
  height: 150rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchBox input{
  width: 700rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.cgContainer{
  display: flex;
  justify-content: space-between;
}

.leftBox{
  flex: 2;
  background: #f7f7f7;
  display: flex;
  flex-direction: column;
}

.leftBox view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.leftBox .on{
  border-left: 2px solid red;
  background: #fff;
}

scroll-view{
  flex: 4;
  height: 960rpx;
}

scroll-view .goodsOne{
  display: flex;
  align-items: center;
  justify-content: space-around;
}

scroll-view .goodsImg{
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
}

scroll-view .car{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}

